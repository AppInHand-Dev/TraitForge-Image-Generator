<Window x:Class="TraitForge.Windows.WindowCollectionEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TraitForge.Windows"
        mc:Ignorable="d"
        Title="WindowCollectionEdit" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="LblCollectionName" Content="Name" HorizontalAlignment="Left" Height="30" Margin="136,44,0,0" VerticalAlignment="Top" Width="143"/>
        <Label x:Name="LblCollectionDescription" Content="Description" HorizontalAlignment="Left" Height="37" Margin="136,130,0,0" VerticalAlignment="Top" Width="143"/>
        <TextBox x:Name="TxtboxCollectionName" HorizontalAlignment="Left" Height="30" Margin="136,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="143"/>
        <Button x:Name="BtnCollectionEditApply" Content="Apply" HorizontalAlignment="Left" Height="38" Margin="145,298,0,0" VerticalAlignment="Top" Width="134" Click="BtnCollectionEditApply_Click"/>
        <Button x:Name="BtnCollectionEditCancel" Content="Cancel" HorizontalAlignment="Left" Height="41" Margin="145,359,0,0" VerticalAlignment="Top" Width="134" Click="BtnCollectionEditCancel_Click"/>
        <TextBox x:Name="TxtboxCollectionDescription" HorizontalAlignment="Left" Height="96" Margin="145,172,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134"/>

    </Grid>
</Window>
