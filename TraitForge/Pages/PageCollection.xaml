<Page x:Class="TraitForge.Pages.PageCollection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TraitForge.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageCollection">

    <Grid x:Name="GridMain">
        <Label x:Name="LblCollectionName" Content="" HorizontalAlignment="Left" Height="33" Margin="49,43,0,0" VerticalAlignment="Top" Width="166"/>
        <Button x:Name="BtnCollectionDetailsEdit" Content="Edit" HorizontalAlignment="Left" Height="29" Margin="575,45,0,0" VerticalAlignment="Top" Width="120" Click="BtnCollectionDetailsEdit_Click"/>
        <Button x:Name="BtnCollectionDelete" Content="Delete" HorizontalAlignment="Left" Height="37" Margin="578,94,0,0" VerticalAlignment="Top" Width="114" Click="BtnCollectionDelete_Click"/>
        <Label x:Name="LblCollectionDescription" Content="" HorizontalAlignment="Left" Height="36" Margin="49,81,0,0" VerticalAlignment="Top" Width="254"/>
        <Button x:Name="BtnShuffle" Content="Go" HorizontalAlignment="Left" Height="69" Margin="608,317,0,0" VerticalAlignment="Top" Width="106" Click="BtnShuffle_Click"/>
        <Label x:Name="LblTraitTypes" Content="Trait Types" HorizontalAlignment="Left" Height="29" Margin="57,168,0,0" VerticalAlignment="Top" Width="96"/>
        <Button x:Name="BtnTraitTypeAdd" Content="+" HorizontalAlignment="Left" Height="29" Margin="183,168,0,0" VerticalAlignment="Top" Width="43" Click="BtnTraitTypeAdd_Click"/>

        <ScrollViewer x:Name="ScrlViewer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="0,210,300,0">
            <Grid x:Name="GridTraitTypes" HorizontalAlignment="Left" VerticalAlignment="Top">

            </Grid>
        </ScrollViewer>
        <Image x:Name="ImageViewer" HorizontalAlignment="Left" Height="268" Margin="522,45,0,0" VerticalAlignment="Top" Width="277"/>


    </Grid>
</Page>
