<Page x:Class="TraitForge.PageMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TraitForge"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="200"
      Title="PageMain">

    <Grid HorizontalAlignment="Center" Width="200">
        <Button x:Name="BtnNewCollection" Content="New collection" HorizontalAlignment="Left" Margin="41,59,0,0" VerticalAlignment="Top" Height="30" Width="120" Click="BtnNewCollection_Click"/>
        <Button x:Name="BtnDuplicateCollection" Content="Duplicate collection" HorizontalAlignment="Left" Margin="41,106,0,0" VerticalAlignment="Top" Height="30" Width="120" Click="BtnDuplicateCollection_Click"/>
        <Button x:Name="BtnLoadCollection" Content="Load collection" HorizontalAlignment="Left" Margin="41,153,0,0" VerticalAlignment="Top" Height="30" Width="120" Click="BtnLoadCollection_Click"/>
        <Button x:Name="BtnExit" Content="Exit" HorizontalAlignment="Left" Margin="41,200,0,0" VerticalAlignment="Top" Height="30" Width="120" Click="BtnExit_Click"/>

    </Grid>
</Page>
