<Page x:Class="TraitForge.PageNewCollection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TraitForge"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="200"
      Title="New Collection">

    <Grid HorizontalAlignment="Center" Width="200">
        <Label x:Name="LblCollectionName" Content="Name" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="60" Margin="31,38,0,0"/>
        <TextBox x:Name="TxtboxCollectionName" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="31,78,0,0"/>
        <Label x:Name="LblCollectionDescription" Content="Description" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="82" Margin="31,119,0,0"/>
        <TextBox x:Name="TxtboxCollectionDescription" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="31,150,0,0"/>
        <Button x:Name="BtnCollectionCreate" Content="Create" HorizontalAlignment="Left" Margin="61,210,0,0" VerticalAlignment="Top" Click="BtnCollectionCreate_Click"/>
    </Grid>
</Page>
